<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medical_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/medical_surface">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/contactsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/medical_surface"
            android:minHeight="?attr/actionBarSize"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:title="@string/contacts_title"
            android:titleTextColor="@color/medical_on_surface"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextAppearance="?attr/textAppearanceHeadlineSmall" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tvContactsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/contacts_subtitle"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/medical_on_surface_variant" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContacts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:contentDescription="@string/contacts_list_content_description" />

        <TextView
            android:id="@+id/tvContactsEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/contacts_empty"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/medical_on_surface_variant"
            android:visibility="gone" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/contacts_action_add"
        android:textColor="@color/medical_on_primary"
        app:backgroundTint="@color/medical_primary"
        app:icon="@drawable/ic_person_add"
        app:iconTint="@color/medical_on_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
