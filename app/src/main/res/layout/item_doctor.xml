<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:paddingStart="12dp" android:paddingEnd="12dp">

    <TextView
        android:id="@+id/tvDocEmoji"
        android:layout_width="40dp" android:layout_height="40dp"
        android:text="👨‍⚕️" android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvDocName"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="Dr. Juan Pérez"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintStart_toEndOf="@id/tvDocEmoji" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDocSubtitle"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="Cardiólogo • CMP 123456"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@id/tvDocName"
        app:layout_constraintTop_toBottomOf="@id/tvDocName"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
